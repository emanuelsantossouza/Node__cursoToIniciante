<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

    <body>
        <%- include('./partials/navbar.ejs') %>

            <div class="box">

                <fieldset>
                    <legend><b>Lista de usuários</b></legend>
                    <br>
                    <% if (user.length> 0){ %>
                        <% user.forEach(user=> { %>

                            <h3 class="title">
                                <%= user.firstName %>
                                    <%= user.lastName %>
                            </h3>

                            <p>
                                <%= user.email %>
                            </p>
                            <br>


                            <% })%>
                                <% } else { %>
                                    <p>Não há usuarios para exibir...</p>
                                    <% }%>

                                        <br>
                                        <button><a href="/users/cadastro/views">Cadastrar novo usuarios</a></button>
                </fieldset>


            </div>



    </body>

</html>